<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.schoolcode.autoupdate</string>
    <key>ProgramArguments</key>
    <array>
        <string>/Library/SchoolCode/repo/scripts/system_update.sh</string>
    </array>
    <key>WorkingDirectory</key>
    <string>/Library/SchoolCode/repo</string>
    <key>EnvironmentVariables</key>
    <dict>
        <key>HOME</key>
        <string>/var/root</string>
    </dict>
    <key>RunAtLoad</key>
    <true/>
    <key>StartInterval</key>
    <integer>1800</integer>
    <key>StandardOutPath</key>
    <string>/var/log/schoolcode/daemon_update.out</string>
    <key>StandardErrorPath</key>
    <string>/var/log/schoolcode/daemon_update.err</string>
</dict>
</plist>
